// TIKIT System - Prisma Schema Definition
// Phase 1: Base configuration for PostgreSQL database
// This schema defines the data models for the TIKIT ticket management system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Test model for Phase 1 migration verification
// This will be replaced/extended in future phases with actual ticket entities
model TestEntity {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
